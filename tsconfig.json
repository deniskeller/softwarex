{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "src",
    "paths": {
			"@layouts/*": [
				"layouts/*"
			],
			"@base/*": [
				"components/base/*"
			],
			"@content/landing/*": [
				"components/landing/content/*"
			],
			"@content/app/*": [
				"components/app/content/*"
			],
			"@modals/*": [
				"components/modals/*"
			],
			"@pages/*": [
				"components/pages/*"
			],
			"@constants/*": [
				"constants/*"
			],
			"@view/*": [
				"view/*"
			],
			"@hooks/*": [
				"hooks/*"
			],
			"@store/*": [
				"store/*"
			],
			"@utils/*": [
				"utils/*"
			],
			"@api/*": [
				"api/*"
			],
			"@services/*": [
				"services/*"
			],
		},
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
